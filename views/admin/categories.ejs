<%- include ('../partials/adminheader'); %>
    <h2 class="page-title">Categories</h2>
    <a href="/admin/categories/add-category" class="btn btn-primary">Add a new pages</a>
    <br><br>
    <table class="table table-striped sorting">
        <thead>
            <tr>
                <th>Category</th>
                <th>Edit</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <% categories.forEach(function(cat){ %>
                <tr>
                    <td>
                        <%= cat.title %>
                    </td>
                    <td><a href="/admin/categories/add-category/<%= cat.slug %>">Edit</a></td>
                    <td><a class="confirmDeletion" href="/admin/categories/delete-category/<%= cat._id %>">Delete</a></td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <script src="https://code.jquery.com/ui/1.12.0/jquery-ui.min.js"></script>
    <script>
        $('tbody').sortable({

            items: "tr:not('.home')",
            placeholder: "ui-state-hightlight",
            update: function() {
                var ids = $('tbody').sortable("serialize");
                var url = "/admin/pages/reorder-pages";

                $.post(url, ids);
            }
        });
    </script>
    <%- include ('../partials/adminfooter'); %>